# Voice Handler Configuration
# Copy this file to .env and customize

# =============================================================================
# USER SETTINGS
# =============================================================================

# Your nickname - Cosmic Eddie will use this to address you
# Default: "rockstar"
USER_NICKNAME=Bernard

# =============================================================================
# LLM PROVIDER SETTINGS
# =============================================================================

# LLM provider: "qwen" (qwen-code CLI), "ollama" (local), or "none" (fallback only)
# Default: "qwen"
LLM_PROVIDER=ollama

# Ollama settings (if LLM_PROVIDER=ollama)
OLLAMA_MODEL=qwen2.5:0.5b
OLLAMA_HOST=http://localhost:11434

# Qwen settings (if LLM_PROVIDER=qwen)
# Note: qwen-code must be installed via npm: npm install -g qwen-code
QWEN_MAX_TOKENS=50

# =============================================================================
# TTS SETTINGS
# =============================================================================

# TTS provider: "openai", "system", or "none"
# Default: "openai" (falls back to system if no API key)
TTS_PROVIDER=openai

# OpenAI API key for TTS (optional - will use system TTS if not set)
OPENAI_API_KEY=

# OpenAI voice: nova, alloy, echo, fable, onyx, shimmer
# Default: "nova"
OPENAI_VOICE=nova

# =============================================================================
# PERSONALITY SETTINGS
# =============================================================================

# Personality style: "rockstar" (psychedelic rock roadie)
# Default: "rockstar"
PERSONALITY_STYLE=rockstar

# Language for responses: "es" (Spanish), "en" (English)
# Default: "es"
LANGUAGE=es

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Enable async queue for non-blocking TTS
# Default: true
USE_ASYNC_QUEUE=true

# Debug mode (verbose logging)
# Default: false
DEBUG_MODE=false

# Minimum delay between speech announcements (seconds)
# Default: 1.0
MIN_SPEECH_DELAY=1.0

# Rate limiting for tool announcements (seconds)
# Default: 3.0
TOOL_ANNOUNCEMENT_INTERVAL=3.0
