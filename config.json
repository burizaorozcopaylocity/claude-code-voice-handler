{
  "queue_settings": {
    "max_retries": 3,
    "retry_backoff_base": 0.5,
    "consumer_poll_timeout": 1.0
  },
  "message_limits": {
    "max_words": 50,
    "max_chars": 300,
    "min_chars_for_tts": 3,
    "min_chars_for_compression": 50,
    "truncate_suffix": "..."
  },
  "timing": {
    "min_speech_delay": 1.0,
    "min_tool_announcement_interval": 3.0,
    "session_expiry_hours": 4
  },
  "tts_settings": {
    "openai_speed": 0.95,
    "max_tokens_llm": 100,
    "llm_temperature": 0.8,
    "llm_timeout": 5
  },
  "history": {
    "max_llm_history_messages": 20
  },
  "voice_settings": {
    "tts_provider": "openai",
    "use_steerable_tts": true,
    "accent": "mexicano chilango",
    "message_prefix": "",
    "openai_voice": "nova",
    "openai_voices": {
      "nova": "Natural and warm (default)",
      "alloy": "Neutral and balanced",
      "echo": "Smooth and articulate",
      "fable": "Expressive British accent",
      "onyx": "Deep and authoritative",
      "shimmer": "Gentle and soothing"
    },
    "fallback_voice": "Ralph",
    "fallback_speech_rate": 180,

    "personality": "friendly_professional",
    "user_nickname": "Bernard"
  },
  "contextual_phrases": {
    "starting_task": [
      "Starting {task_type}",
      "Beginning work on {task_type}",
      "Let me handle {task_type}",
      "Working on {task_type} now"
    ],
    "examining_file": [
      "Looking at {filename}",
      "Checking {filename}",
      "Examining {filename}",
      "Reading through {filename}"
    ],
    "making_changes": [
      "Updating {filename}",
      "Modifying {filename}",
      "Making changes to {filename}",
      "Editing {filename}"
    ],
    "searching": ["Searching for {query}", "Looking for {query}", "Finding {query}", "Locating {query}"],
    "running_command": ["Running {command}", "Executing {command}", "Processing {command}"],
    "waiting": ["Waiting for your input", "Ready when you are", "Standing by", "Awaiting instructions"],
    "error_occurred": ["Encountered an issue", "Something went wrong", "Hit a snag", "Found a problem"]
  },
  "encouragements": ["Great choice", "Smart thinking", "Good idea"],
  "transition_phrases": ["Moving on to", "Next up"]
}
